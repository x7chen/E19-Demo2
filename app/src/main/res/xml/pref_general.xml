<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_wheel_size_entries"
        android:entryValues="@array/pref_wheel_size_values"
        android:key="wheel_circumference"
        android:negativeButtonText="返回"
        android:positiveButtonText="按钮+"
        android:title="@string/pref_title_wheel_size" />
    <EditTextPreference
        android:editable="true"
        android:inputType="numberDecimal"
        android:key="current_altitude"
        android:title="@string/pref_title_altitude_calibrate" />

</PreferenceScreen>
